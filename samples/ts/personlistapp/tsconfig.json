{
    "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true, // required to use this within object literals, for example in object specified in component()
      "noImplicitAny": false,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["."]
}