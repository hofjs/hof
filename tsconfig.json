{
    "compilerOptions": {
      "outDir": "lib/esm",
      "module": "esnext",
      "target": "es6",
      "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019", "es2020", "ESNext"],
      "jsx": "react",
      "declaration": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "src/browser.ts"]
}